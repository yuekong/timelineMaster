<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.aigo.library_scalebar.VideoTimeBar
        android:id="@+id/main_videotimebar2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#64000000"
        app:baselinePosition="0"
        app:colorScaleBackgroud="#64000000"
        app:cursorBackgroudColor="#000000"
        app:cursorPosition="0"
        app:cursorValueSize="12sp"
        app:showCursorLine="false"
        app:tickColor="@android:color/white"
        app:tickValueColor="@android:color/white"
        app:tickValueSize="12sp" />

</androidx.constraintlayout.widget.ConstraintLayout>